#!/usr/bin/env php
<?php

// Find autoloader
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];

$autoloadFound = false;
foreach ($autoloadPaths as $file) {
    if (file_exists($file)) {
        require $file;
        $autoloadFound = true;
        break;
    }
}

if (!$autoloadFound) {
    fwrite(
        STDERR,
        'You need to set up the project dependencies using Composer:' . PHP_EOL .
        '    composer install' . PHP_EOL
    );
    exit(1);
}

use Dsdobrzynski\DockerAppBuildKit\Console\Application;

$application = new Application();
$application->run();
