#################
# PROJECT SETUP #
#################

PROJECT_NAME=your_project_name

#################
# APP CONTAINER #
#################

# Application type (php-apache, node, python, java)
APP_TYPE=php-apache

# AWS CLI
APP_AWS_CLI_PROFILE=your_local_aws_profile

# AWS account info
APP_AWS_REGION=us-east-1
APP_AWS_ACCOUNT_ID=000000000000

# Remote Web application artifact image (uncomment and set if using remote image)
#APP_REPO_NAME=your/app/repo
#APP_IMAGE_TAG=latest

# Port mapping
APP_HOST_PORT=8080       # Host port for app (e.g. 8080)
APP_CONTAINER_PORT=80    # Container port for app (e.g. 80)

# Local volume path
APP_HOST_VOLUME_PATH="/absolute/path/to/sourcecode" # Host path mapped to webroot in container
APP_CONTAINER_VOLUME_PATH="/var/www/html" # Container path for webroot

# Dockerfile path
APP_DOCKERFILE="build/docker/app/Dockerfile-app-php" # Path to app Dockerfile (auto-selected based on APP_TYPE if not set)

# Base image for app (optional, uncomment to override Dockerfile default)
#APP_BASE_IMAGE="php:8.4.16-apache-bookworm"

##################
# DATA CONTAINER #
##################

# Database type (postgres, mysql, mariadb)
DATA_REL_TYPE=postgres

# AWS CLI
DATA_REL_AWS_CLI_PROFILE=your_local_aws_profile

# AWS account info
DATA_REL_AWS_REGION=us-east-1
DATA_REL_AWS_ACCOUNT_ID=000000000000

# Remote data artifact image (uncomment and set if using remote image)
#DATA_REL_REPO_NAME=your/data/repo
#DATA_REL_IMAGE_TAG=latest

# Port mapping
DATA_REL_HOST_PORT=8081       # Host port for data (e.g. 8081)
DATA_REL_CONTAINER_PORT=5432  # Container port for data (e.g. 5432)

# Local volume path
DATA_REL_HOST_VOLUME_PATH="/absolute/path/to/data"    # Host path mapped to data directory in container
DATA_REL_CONTAINER_VOLUME_PATH="/var/lib/postgresql/data"    # Container path for data

# Dockerfile path
DATA_REL_DOCKERFILE="build/docker/data-rel/Dockerfile-data-postgres" # Path to data Dockerfile

# Base image for data (optional, uncomment to override Dockerfile default)
#DATA_REL_BASE_IMAGE="postgres:17.2-bookworm"

# Details for data store
DATA_REL_NAME=your_db_name
DATA_REL_USERNAME=your_db_user
DATA_REL_PASSWORD=your_db_password

# Optional source file for import into data store
DATA_REL_SOURCEFILE="/absolute/path/to/import.sql.zip"

#########################
# DATA-NONREL CONTAINER #
#########################

# Non-relational database type (mongodb, neo4j) - leave empty to skip
DATA_NONREL_TYPE=

# AWS CLI
DATA_NONREL_AWS_CLI_PROFILE=your_local_aws_profile

# AWS account info
DATA_NONREL_AWS_REGION=us-east-1
DATA_NONREL_AWS_ACCOUNT_ID=000000000000

# Remote data-nonrel artifact image (uncomment and set if using remote image)
#DATA_NONREL_REPO_NAME=your/data-nonrel/repo
#DATA_NONREL_IMAGE_TAG=latest

# Port mapping
DATA_NONREL_HOST_PORT=8082       # Host port for data-nonrel (e.g. 8082)
DATA_NONREL_CONTAINER_PORT=27017 # Container port for data-nonrel (e.g. 27017 for MongoDB, 7687 for Neo4j)

# Local volume path
DATA_NONREL_HOST_VOLUME_PATH="/absolute/path/to/data-nonrel"    # Host path mapped to data directory in container
DATA_NONREL_CONTAINER_VOLUME_PATH="/data/db"    # Container path for data (MongoDB: /data/db, Neo4j: /data)

# Dockerfile path
DATA_NONREL_DOCKERFILE="build/docker/data-nonrel/Dockerfile-data-mongodb" # Path to data-nonrel Dockerfile (auto-selected based on DATA_NONREL_TYPE)

# Base image for data-nonrel (optional, uncomment to override Dockerfile default)
#DATA_NONREL_BASE_IMAGE="mongo:8.0"

# Details for data-nonrel store
DATA_NONREL_NAME=your_db_name
DATA_NONREL_USERNAME=your_db_user
DATA_NONREL_PASSWORD=your_db_password

# Optional source file for import into data-nonrel store
DATA_NONREL_SOURCEFILE="/absolute/path/to/import.json"
