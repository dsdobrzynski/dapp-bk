ARG BASE_IMAGE=postgres:17.2-bookworm
FROM ${BASE_IMAGE}

# Install unzip for data import
RUN apt-get update && apt-get install -y unzip && rm -rf /var/lib/apt/lists/*

# Note: POSTGRES_DB, POSTGRES_USER, and POSTGRES_PASSWORD are set at runtime via -e flags
# The official postgres image handles database and user creation automatically

# Expose default PostgreSQL port
EXPOSE 5432
